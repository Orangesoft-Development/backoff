{
    "name": "orangesoft/backoff",
    "description": "Backoff algorithm implementation",
    "keywords": ["backoff", "constant", "exponential", "linear", "jitter", "sleeper", "retry"],
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksandr Denisyuk",
            "email": "a@denisyuk.by",
            "homepage": "https://denisyuk.by/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.4"
    },
    "suggest": {
        "orangesoft/retry": "Allows to use retry tool for exceptions"
    },
    "autoload": {
        "psr-4": {
            "Orangesoft\\Backoff\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orangesoft\\Backoff\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    }
}
